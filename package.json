{
  "name": "transforma-server",
  "version": "0.1.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "dev": "yarn start:dev",
    "prod": "yarn start:prod",
    "start:dev": "nodemon --exec babel-node -r ./node_modules/dotenv/config --presets @babel/env ./server/index.js",
    "start:prod": "yarn serve",
    "serve": "node -r dotenv/config build",
    "build": "yarn build:client && yarn build:server",
    "build:client": "yarn install:client && cd client && yarn build && cd ..",
    "build:server": "yarn install:server && ./node_modules/.bin/babel ./server -d ./build -s",
    "install-deps": "yarn install:client && yarn install:server",
    "install:client": "cd client && yarn install --production=true && cd ..",
    "install:server": "yarn install --production=true",
    "clean": "yarn clean:client && yarn clean:server",
    "clean:server": "rm -rf build && mkdir build",
    "clean:client": "cd client && rm -rf ./build && cd .."
  },
  "dependencies": {
    "@babel/cli": "^7.8",
    "@babel/preset-env": "^7.8",
    "babel-plugin-module-resolver": "^4.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "if-env": "^1.0.4",
    "pg": "^8.0.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.6",
    "storybook": "^5.3.19"
  },
  "devDependencies": {
    "@babel/core": "^7.8",
    "@babel/node": "^7.8",
    "nodemon": "^2.0.2",
    "sequelize-cli": "^5.5.1"
  },
  "engines": {
    "node": ">= 12.x",
    "yarn": "1.x"
  }
}
